<!DOCTYPE html>
<html>
<head>
    <title>Carrito de Compras</title>
</head>
<body>
    <ul>
        {{#each carrito.productosCarrito}}
        <li>{{this.producto.nombre}} - Cantidad: {{this.quantity}}</li>
        {{/each}}
    </ul>

    <h2>Actualizar Cantidad</h2>
    <form action="/api/cart/{{carrito._id}}" method="PUT">
        <select name="producto">
            {{#each productos}}
            <option value="{{this._id}}">{{this.nombre}}</option>
            {{/each}}
        </select>
        <input type="number" name="quantity" placeholder="Nueva Cantidad">
        <button type="submit">Actualizar</button>
    </form>

    <h2>Eliminar producto del carrito</h2>
    <form action="/api/cart/{{carrito._id}}/products/{{this._id}}" method="DELETE">
        <button type="submit">Eliminar</button>
    </form>
</body>
</html>
